<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BA005273"
    tools:context=".UpdatePass">

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Pass"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        tools:ignore="HardcodedText" />

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="663dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="TextSizeCheck">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Name -->
            <TableRow android:layout_height="36dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="8dp"
                    android:text="Name:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <TextView
                    android:id="@+id/tvupdatepassname"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:paddingEnd="8dp"
                    android:text="None"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck" />
            </TableRow>


            <!-- Aadhar Number -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:paddingEnd="8dp"
                    android:text="Pass ID "
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <TextView
                    android:id="@+id/UpdatePassID"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:paddingEnd="8dp"
                    android:text="None"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlSymmetry,TextContrastCheck" />


            </TableRow>

            <!-- Select Bus Route -->
            <TableRow>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="38dp"
                    android:paddingEnd="8dp"
                    android:text="Select Bus Route:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlSymmetry,TextSizeCheck" />

                <Spinner
                    android:id="@+id/spinnerBusRouteUpdatePass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#FFFFFF"
                    android:foregroundTint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    tools:ignore="TouchTargetSizeCheck" />
            </TableRow>

            <!-- Pass Type -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:paddingEnd="8dp"
                    android:text="Pass Type:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <Spinner
                    android:id="@+id/spinnerPassTypeUpdatePass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#FAF6F6"
                    android:dropDownWidth="match_parent"
                    android:popupBackground="#FAF6F6"
                    android:textColor="#FFFFFF"
                    android:visibility="visible"
                    tools:ignore="TouchTargetSizeCheck" />
            </TableRow>

            <!-- Start Date -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:paddingEnd="8dp"
                    android:text="Start Date:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <TextView
                    android:id="@+id/tvStartDateUpdatePass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="None"
                    android:textColor="#FFFEFE"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </TableRow>

            <!-- End Date -->
            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingEnd="8dp"
                    android:text="End Date:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <TextView
                    android:id="@+id/tvEndDateUpdatePass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="None"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <!-- Pass Amount -->
            <TableRow>

                <TextView
                    android:layout_width="149dp"
                    android:layout_height="match_parent"
                    android:paddingEnd="8dp"
                    android:text="Pass Amount:"

                    android:textColor="@color/black"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <TextView
                    android:id="@+id/tvPassAmountUpdatePass"
                    android:layout_width="228dp"
                    android:layout_height="match_parent"
                    android:text="None"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <!-- Submit Button -->


            <Button
                android:id="@+id/btnSubmitUpdatePass"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="Update"
                tools:ignore="ButtonStyle,HardcodedText,VisualLintButtonSize" />


        </TableLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>